@import '../../common/style/mixin.styl';

.soul-menu {
  background-color: #f7f7f7;
  text-align: left;
  overflow-y: auto;
  overflow-x: hidden;
  width: 15%;
  transition: all 0.2s;

  .anticon {
    visibility: visible;
  }

  &__hide {
    width: 35px;

    a {
      visibility: hidden;
    }
  }

  i.anticon-menu-fold, i.anticon-menu-unfold {
    cursor: pointer;
    mx_fc(16px, #bfbfc0);
    mx_hlh(45px, 45px);
    margin-left: 10px;
  }

  .nav-list li {
    height: 40px;
    box-sizing: border-box;
    padding-left: 12px;

    &:hover {
      background-color: #f7f7f7;
    }

    a {
      display: inline-block;
      mx_fc(14px, #000);
      mx_whlh(100%, 40px, 40px);
      overflow: hidden;

      &.active {
        color: #bc2f2e;
      }
    }

    i {
      margin-right: 16px;
    }
  }
}
